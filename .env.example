# Goldstream Environment Configuration
# Copy this file to .env for local development and fill in secrets if any.

# -- Application Ports --
API_PORT_HTTP=8080
API_PORT_GRPC=50051
CADDY_HTTP_PORT=5173

# -- Service URLs (for inter-service communication inside Docker) --
DATABASE_URL="postgres://goldstream:password@postgres:5432/goldstream_db?sslmode=disable"
REDIS_URL="redis://redis:6379/0"
NATS_URL="nats://nats:4222"

# -- Frontend Configuration --
VITE_API_BASE_URL="http://localhost:5173"

# -- Database Credentials (used by docker-compose to initialize the DB) --
POSTGRES_USER=goldstream
POSTGRES_PASSWORD=password
POSTGRES_DB=goldstream_db